BOT=bot
SERVER=server
CANDC=CandC

SOURCE_SERVER=server.c
SOURCE_CANDS=CandC.c

SOURCE_BOT=bot.c
HEADERS_BOT=bot.h

CFLAGS=-Wall -g

OBJECTS_SERVER=${SOURCE_SERVER:.c=.o}
OBJECTS_BOT=${SOURCE_BOT:.c=.o}
OBJECTS_CANDC=${SOURCE_CANDS:.c=.o}

$(SERVER) $(BOT) $(CANDC): $(OBJECTS_SERVER) $(OBJECTS_BOT) $(OBJECTS_CANDC)
	$(CC) $(OBJECTS_SERVER) -o $(SERVER)
	$(CC) $(OBJECTS_BOT) -o $(BOT)
	$(CC) $(OBJECTS_CANDC) -o $(CANDC)
	

$(OBJECTS_BOT): $(HEADERS_BOT)
$(OBJECTS_CANDC): $(HEADERS_BOT)

clean:
	-rm -f $(SERVER) $(BOT) $(CANDC) $(OBJECTS_SERVER) $(OBJECTS_BOT) $(OBJECTS_CANDC) server.o* *.core
